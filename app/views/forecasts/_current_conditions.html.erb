<div class="block md:col-start-2 max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700 font-normal text-gray-700 dark:text-gray-400">
  <h4 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Current Conditions</h5>
  <p>For: <%= @weather["resolvedAddress"] %></p>
  <p>Temperature: <%= @current_conditions["temp"] %>°F</p>
  <p>Feels Like: <%= @current_conditions["feelslike"] %>°F</p>
  <p>Humidity: <%= @current_conditions["humidity"] %>%</p>
  <p>Dew Point: <%= @current_conditions["dew"] %>°F</p>
  <p>Timezone: <%= @weather["timezone"] %></p>
  <% if @cached %>
    <span class="bg-blue-100 text-blue-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300">Data from cache</span></p>
  <% else %>
    <span class="bg-green-100 text-green-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">Data from API</span></p>
  <% end %>
</div>